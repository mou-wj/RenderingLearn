#version 450
// 定义计算工作组的大小
layout(local_size_x = 1, local_size_y = 1, local_size_z = 1) in;

layout(rgba32f, binding = 0,set  = 0) uniform image2D outputImage; // 输出纹理




void main() {
    // 获取当前像素的坐标
    ivec2 pixelCoords = ivec2(gl_GlobalInvocationID.xy);

    // 写入到输出纹理
    imageStore(outputImage, pixelCoords, vec4(1,0,0,1));
}